  "/feed": {
    "get": {
      "tags": [
        "User"
      ],
      "summary": "Gets your all posts of your followers",
      "description": "Gets your all posts of your followers",
      "parameters": [
        {
          "in": "header",
          "name": "Bearer {token}",
          "schema": {
            "format": "jwt"
          },
          "required": true
        }
      ],
      "responses": {
        "200": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "type": "object",
                    "properties": {
                      "username": {
                        "type": "String",
                        "example": "ahmetyilmaz"
                      },
                      "following": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "username": {
                              "type": "string",
                              "example": "mehmetyilmaz"
                            },
                            "posts": {
                              "type": "array",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "postId": {
                                    "type": "String",
                                    "example": "123456789abcdefghij01234"
                                  },
                                  "content": {
                                    "type": "String",
                                    "example": "the post content"
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
