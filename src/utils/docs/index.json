      ],
      "responses": {
        "200": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "String",
                    "example": "user created"
                  },
                  "data": {
                    "type": "object",
                    "properties": {
                      "username": {
                        "type": "String",
                        "example": "ahmetyilmaz"
                      },
                      "numberFollower": {
                        "type": "Number",
                        "example": 100
                      },
                      "numberFollowing": {
                        "type": "Number",
                        "example": 100
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "404": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "String",
                    "example": "user not exist"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
