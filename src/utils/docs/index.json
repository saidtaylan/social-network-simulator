{
  "/users": {
    "post": {
      "tags": [
        "User"
      ],
      "summary": "Creates a new user",
      "description": "Creates a new user",
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "String",
                  "example": "ahmetyilmaz"
                },
                "email": {
                  "type": "String",
                  "example": "ahmetyilmaz@yilmaz.com"
                },
                "password": {
                  "type": "String",
                  "example": "123"
                }
              }
            }
          }
        }
      },
      "responses": {
        "201": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "String",
                    "example": "user created"
                  },
                  "data": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "String",
                        "example": "123456789abcdefghij01234"
                      },
                      "username": {
                        "type": "String",
                        "example": "ahmetyilmaz"
                      },
                      "email": {
                        "type": "String",
                        "example": "ahmetyilmaz@yilmaz.com"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "409": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "String",
                    "example": "user already exist"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "/users/{username}": {
    "get": {
      "tags": [
        "User"
      ],
      "summary": "get information about a spesific user by username",
